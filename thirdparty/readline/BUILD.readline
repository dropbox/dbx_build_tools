load("@dbx_build_tools//build_tools/cc:cc.bzl", "dbx_thirdparty_cc_library")

cc_binary(
    name = "rl",
    srcs = ["examples/rlbasic.c"],
    copts = ["-DHAVE_STDLIB_H"],
    deps = [
        ":readline",
    ],
)

dbx_shelflife_version_tag = "dbx-shelflife-version:readline=8.0"

dbx_thirdparty_cc_library(
    name = "textual-includes",
    tags = [dbx_shelflife_version_tag],
    textual_hdrs = [
        "emacs_keymap.c",
        "vi_keymap.c",
    ],
)

PUBLIC_HDRS = [
    "chardefs.h",
    "history.h",
    "keymaps.h",
    "readline.h",
    "rlconf.h",
    "rlstdc.h",
    "rltypedefs.h",
    "tilde.h",
]

COPTS = [
    "-DHAVE_CONFIG_H",
    "-I",
    "$(GENDIR)/external/org_gnu_readline",
    "-Wno-parentheses",
    "-Wno-unused-variable",
    "-Wno-unused-function",
    "-Wno-maybe-uninitialized",
    "-Wno-unused-label",
    "-Wno-unused-but-set-variable",
    "-Wno-stringop-truncation",
]

# The main export of this BUILD file: the readline library.
cc_library(
    name = "readline",
    srcs = [
        "ansi_stdlib.h",
        "bind.c",
        "callback.c",
        "chardefs.h",
        "colors.c",
        "colors.h",
        "compat.c",
        "complete.c",
        "display.c",
        "funmap.c",
        "histexpand.c",
        "histfile.c",
        "histlib.h",
        "history.c",
        "history.h",
        "histsearch.c",
        "input.c",
        "isearch.c",
        "keymaps.c",
        "keymaps.h",
        "kill.c",
        "macro.c",
        "mbutil.c",
        "misc.c",
        "nls.c",
        "parens.c",
        "parse-colors.c",
        "parse-colors.h",
        "posixdir.h",
        "posixjmp.h",
        "posixselect.h",
        "posixstat.h",
        "readline.c",
        "readline.h",
        "rlconf.h",
        "rldefs.h",
        "rlmbutil.h",
        "rlprivate.h",
        "rlshell.h",
        "rlstdc.h",
        "rltty.c",
        "rltty.h",
        "rltypedefs.h",
        "rlwinsize.h",
        "savestring.c",
        "search.c",
        "shell.c",
        "signals.c",
        "tcap.h",
        "terminal.c",
        "text.c",
        "undo.c",
        "util.c",
        "vi_mode.c",
        "xfree.c",
        "xmalloc.c",
        "xmalloc.h",
        ":config.h",
    ],
    hdrs = PUBLIC_HDRS,
    copts = COPTS,
    include_prefix = "readline",
    strip_include_prefix = "",
    visibility = ["//visibility:public"],
    deps = [
        ":textual-includes",
        ":tilde",
        "@org_gnu_ncurses//:ncursesw",
    ],
)

# This is the same as :readline, but the public headers aren't in a
# readline/ subdirectory. Some software requires the headers to be
# top-level.
cc_library(
    name = "readline_unprefixed",
    hdrs = PUBLIC_HDRS,
    strip_include_prefix = "",
    visibility = ["//visibility:public"],
    deps = [
        ":readline",
    ],
)

dbx_thirdparty_cc_library(
    name = "tilde",
    srcs = [
        "ansi_stdlib.h",
        "rlstdc.h",
        "tilde.c",
        "tilde.h",
        "xmalloc.h",
        ":config.h",
    ],
    copts = COPTS + [
        "-DREADLINE_LIBRARY",
    ],
    tags = [dbx_shelflife_version_tag],
)

