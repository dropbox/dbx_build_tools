load("@dbx_build_tools//build_tools/cc:cc.bzl", "dbx_thirdparty_cc_library")

dbx_thirdparty_cc_library(
    name = "lzma",
    srcs = [
        ":config-headers",
        "src/liblzma/check/check.c",
        "src/liblzma/check/check.h",
        "src/liblzma/check/crc_macros.h",
        "src/liblzma/check/crc32_fast.c",
        "src/liblzma/check/crc32_table.c",
        "src/liblzma/check/crc32_table_le.h",
        "src/liblzma/check/crc64_fast.c",
        "src/liblzma/check/crc64_table.c",
        "src/liblzma/check/crc64_table_le.h",
        "src/liblzma/check/sha256.c",
        "src/liblzma/rangecoder/price_table.c",
    ] + glob(
        [
            "src/common/*.c",
            "src/common/*.h",
            "src/liblzma/common/*.c",
            "src/liblzma/common/*.h",
            "src/liblzma/delta/*.c",
            "src/liblzma/delta/*.h",
            "src/liblzma/lz/*.c",
            "src/liblzma/lz/*.h",
            "src/liblzma/lzma/*.c",
            "src/liblzma/lzma/*.h",
            "src/liblzma/rangecoder/*.h",
            "src/liblzma/simple/*.c",
            "src/liblzma/simple/*.h",
        ],
        exclude = [
            "src/liblzma/lzma/fastpos_tablegen.c",
        ],
    ),
    hdrs = glob([
        "src/liblzma/api/lzma.h",
        "src/liblzma/api/lzma/*.h",
    ]),
    copts = [
        "-DHAVE_CONFIG_H",
        "-I$(GENDIR)/external/org_tukaani",
        "-Iexternal/org_tukaani/src/liblzma/api",
        "-Iexternal/org_tukaani/src/liblzma/common",
        "-Iexternal/org_tukaani/src/liblzma/check",
        "-Iexternal/org_tukaani/src/liblzma/lz",
        "-Iexternal/org_tukaani/src/liblzma/rangecoder",
        "-Iexternal/org_tukaani/src/liblzma/lzma",
        "-Iexternal/org_tukaani/src/liblzma/delta",
        "-Iexternal/org_tukaani/src/liblzma/simple",
        "-Iexternal/org_tukaani/src/common",
    ],
    strip_include_prefix = "src/liblzma/api",
    tags = ["dbx-shelflife-version:liblzma=5.2.4"],
    visibility = ["//visibility:public"],
)

